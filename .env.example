# =============================================================================
# MARKET ANALYSIS PROJECT - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# API CREDENTIALS
# =============================================================================

# Adzuna API Credentials (REQUIRED)
# Get these from https://developer.adzuna.com/
ADZUNA_ID=your_adzuna_app_id_here
ADZUNA_KEY=your_adzuna_app_key_here

# # =============================================================================
# # API CONFIGURATION
# # =============================================================================
# # Default country for job searches (us, gb, ca, au, de, fr, etc.)
# DEFAULT_COUNTRY=us

# # Default location for job searches (e.g., "New York", "London", "San Francisco")
# DEFAULT_LOCATION=

# # Default job keywords to search for
# DEFAULT_KEYWORDS=software engineer

# # Default job category (e.g., "it-jobs", "sales-jobs", "marketing-jobs")
# DEFAULT_CATEGORY=

# # Maximum results per page (Adzuna limit is 50)
# MAX_RESULTS_PER_PAGE=50

# # Default results per page
# DEFAULT_RESULTS_PER_PAGE=20

# # Request timeout in seconds
# REQUEST_TIMEOUT=30

# # Delay between requests in seconds (be respectful to APIs)
# REQUEST_DELAY=1.0

# # Maximum number of redirects to follow when resolving home URLs
# MAX_REDIRECTS=10

# # =============================================================================
# # DATA STORAGE PATHS
# # =============================================================================

# # Base directory for all data files
# DATA_DIR=data

# # Directory for raw data files (from API calls)
# RAW_DATA_DIR=data/raw

# # Directory for interim/processed data files
# INTERIM_DATA_DIR=data/interim

# # Directory for final processed data files
# PROCESSED_DATA_DIR=data/processed

# # =============================================================================
# # LOGGING & DEBUGGING
# # =============================================================================

# # Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# # Enable debug mode (true/false)
# DEBUG_MODE=false

# # Log file path (leave empty to log only to console)
# LOG_FILE=

# # =============================================================================
# # USER AGENT & REQUEST HEADERS
# # =============================================================================

# # User agent string for web requests (when following redirects)
# USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# # Request timeout for redirect following
# REDIRECT_TIMEOUT=15

# # =============================================================================
# # JOB SEARCH DEFAULTS
# # =============================================================================

# # Default sort order for job results (relevance, date, salary)
# DEFAULT_SORT_BY=relevance

# # Default minimum salary filter (optional)
# DEFAULT_SALARY_MIN=

# # Default maximum salary filter (optional)
# DEFAULT_SALARY_MAX=

# # =============================================================================
# # OPTIONAL: FUTURE INTEGRATIONS
# # =============================================================================

# # Database connection string (if you add database support later)
# # DATABASE_URL=postgresql://user:password@localhost:5432/market_analysis

# # Redis URL (if you add caching later)
# # REDIS_URL=redis://localhost:6379/0

# # Email settings (if you add notifications later)
# # SMTP_HOST=smtp.gmail.com
# # SMTP_PORT=587
# # SMTP_USER=your_email@gmail.com
# # SMTP_PASSWORD=your_app_password

# # Webhook URL for notifications (if you add webhook support later)
# # WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK